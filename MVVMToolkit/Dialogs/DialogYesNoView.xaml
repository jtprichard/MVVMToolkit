<Window x:Class="PB.MVVMToolkit.Dialogs.DialogYesNoView"  
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PB.MVVMToolkit.Dialogs"
             mc:Ignorable="d"  
             x:ClassModifier="internal"
             WindowStartupLocation="CenterOwner"
             SizeToContent="WidthAndHeight"
             ResizeMode="NoResize"
             Title="{Binding Caption}"
             >

    <!-- Resource Dictionary Reference-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Style>
        <StaticResource ResourceKey="Window"/>
    </Window.Style>

    <Grid Margin="10" MinWidth="320" MaxWidth="400">
        <Grid Height="auto">
            <Grid VerticalAlignment="Center" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
                <Image Width="40" 
                       VerticalAlignment="Top"
                       Height="40" 
                       Margin ="10,20,10,0" 
                       Source="{Binding ImageFile}" />


                <TextBlock Grid.Column="1"
                            Text="{Binding Message}"
                            VerticalAlignment="Center"
                           TextWrapping="WrapWithOverflow" 
                           MinHeight="30"
                           MaxWidth="260"
                           Margin="10,10,15,40"/>
            </Grid>
        </Grid>

        <Grid Margin="0,40,10,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0">
                <Button Content="Yes" 
                        IsDefault="True"
                        Style="{StaticResource ButtonDialog}"
                        Command="{Binding YesCommand}"   
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                <Button Content="No" 
                        IsCancel="True"
                        Style="{StaticResource ButtonDialog}"
                        Command="{Binding NoCommand}"  
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
                </StackPanel>
        </Grid>
    </Grid>
</Window>