<Window x:Class="PB.MVVMToolkit.Dialogs.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PB.MVVMToolkit.Dialogs"
             mc:Ignorable="d"  
             x:ClassModifier="internal"
             ContentRendered="Window_ContentRendered"
             WindowStartupLocation="CenterOwner"
             SizeToContent="WidthAndHeight"
             ResizeMode="NoResize"
             Title="{Binding Caption}"
>
    <!-- Resource Dictionary Reference-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Styles/Styles.xaml"/>
                <!-- Converters. -->
                <ResourceDictionary Source="../Converters/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Style>
        <StaticResource ResourceKey="DialogWindow"/>
    </Window.Style>

    <Grid Margin="40" MinWidth="500" MaxWidth="800">
        <StackPanel>
            <Grid VerticalAlignment="Center" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Width="Auto" 
                       Height="50" 
                       Margin="0, 0, 0, 0" 
                       HorizontalAlignment="Left"
                       Source="/PB.MVVMToolkit;component/Resources/Images/pb_logo.jpg" />

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           FontSize="16">
                    <Hyperlink NavigateUri="https://www.performancebim.com" RequestNavigate="Hyperlink_RequestNavigate">
                        www.performancebim.com
                    </Hyperlink>

                </TextBlock>

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           Foreground="{StaticResource PBBlueBrush}"
                           IsEnabled="True"
                           HorizontalAlignment="Center"
                           Margin="0 30 0 20"
                           FontSize="36"
                           Text="{Binding Path=ProductName}">
                </TextBlock>
            </Grid>

            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="{Binding Path=Custom1Visible, Converter={StaticResource RowVisibleConverter}}"/>
                    <RowDefinition Height="{Binding Path=Custom2Visible, Converter={StaticResource RowVisibleConverter}}"/>
                    <RowDefinition Height="{Binding Path=Custom3Visible, Converter={StaticResource RowVisibleConverter}}"/>
                    <RowDefinition Height="{Binding Path=LoggingEnabled, Converter={StaticResource RowVisibleConverter}}"/>
                    <RowDefinition Height="{Binding Path=LoggingEnabled, Converter={StaticResource RowVisibleConverter}}"/>
                    <RowDefinition Height="0"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 20 5"
                           FontSize="14"
                           >
                    Version Number:
                </TextBlock>
                <TextBlock Grid.Row="0"
                           Grid.Column="1"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 10 5"
                           FontSize="14"
                           Text="{Binding Path=VersionNumber}"
                           >
                </TextBlock>

                <TextBlock Grid.Row="1"
                           Grid.Column="0"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 20 5"
                           FontSize="14">
                    License:
                </TextBlock>
                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 10 5"
                           FontSize="14"
                           Text="{Binding Path=Licensee}"
                           >
                </TextBlock>

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 20 5"
                           FontSize="14"
                           Text="{Binding Path=CustomTag1}"
                           >
                </TextBlock>
                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 10 5"
                           FontSize="14"
                           Text="{Binding Path=CustomValue1}"
                           >
                </TextBlock>

                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 20 5"
                           FontSize="14"
                           Text="{Binding Path=CustomTag2}"
                           >
                </TextBlock>
                <TextBlock Grid.Row="3"
                           Grid.Column="1"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 10 5"
                           FontSize="14"
                           Text="{Binding Path=CustomValue2}"
                >
                </TextBlock>

                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 20 5"
                           FontSize="14"
                           Text="{Binding Path=CustomTag3}"
                >
                </TextBlock>
                <TextBlock Grid.Row="4"
                           Grid.Column="1"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 10 5"
                           FontSize="14"
                           Text="{Binding Path=CustomValue3}"
                >
                </TextBlock>

                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 20 5"
                           FontSize="14"
                           Text="Export Log File"
                >
                </TextBlock>
                <Button Grid.Row="5"
                        Grid.Column="1"
                        Margin="0,5,0,5"
                        HorizontalAlignment="Left"
                        Style="{StaticResource DialogButton}"
                        IsEnabled="True"
                        Content="Export"
                        Command="{Binding ExportLogFileCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        ToolTip="Exports the log file for use by the application developer"
                />

                <TextBlock Grid.Row="6"
                           Grid.Column="0"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 20 5"
                           FontSize="14"
                           Text="Verbose Logging"
                >
                </TextBlock>
                <CheckBox Grid.Row="6"
                          Grid.Column="1"
                          Margin="0,5,0,5"
                          IsEnabled="True"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          IsChecked="{Binding VerboseLoggingChecked}"
                          ToolTip="Enables Verbose Logging.  Enable only if requested by the developer."
                />



            </Grid>

            <Grid Margin="0 20 0 0">
                <TextBlock Grid.Row="0"
                           Grid.Column="0"
                           Style="{StaticResource DialogMessageTextBlockStyle}"
                           IsEnabled="True"
                           HorizontalAlignment="Left"
                           Margin="0 0 10 5"
                           FontSize="14"
                           Text="{Binding Path=Copyright}"
                           >
                </TextBlock>
            </Grid>



            <Grid>
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="0,0,20,0">
                    <Button Content="Ok"
                        IsDefault="True"
                        Style="{StaticResource DialogButton}"
                        Command="{Binding OkCommand}"   
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                />
                </StackPanel>
            </Grid>

        </StackPanel>
    </Grid>
</Window>
